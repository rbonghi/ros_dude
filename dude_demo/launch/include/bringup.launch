<launch>

  <arg name="rgbd_enabled" default="false"/>
  <arg name="web_enabled" default="false"/>
  <arg name="joystick_enabled" default="false"/>

  <!-- Load unav hardware interface -->
  <include file="$(find dude_control)/launch/include/driver.launch" />
  
  <!-- load RDBG camera and laser scan -->
  <group if="$(arg rgbd_enabled)">
    <include file="$(find dude_control)/launch/include/rgbd.launch" />
  </group>

  <!-- Launch IMU sensor -->
  <include file="$(find dude_control)/launch/include/imu.launch" />

  <!-- Load teleoperation telecontrol -->
  <group if="$(arg joystick_enabled)">
  <include file="$(find dude_control)/launch/teleop.launch">
    <arg name="joystick" default="true" />
  </include>
  </group>

  <!-- Launch web interface -->
  <group if="$(arg web_enabled)">
    <!-- TF WEB PUB -->
    <node name="tf2_web_republisher" pkg="tf2_web_republisher" type="tf2_web_republisher" />
    <!-- ROSBRIDGE -->
    <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch" > 
       <arg name="port" value="9090"/>
    </include>

    <!--<node name="web_video_server" pkg="web_video_server" type="web_video_server" port="9999" />
    <node name="web_video_server" pkg="depthcloud_encoder" type="depthcloud_encoder_node" 
          depth="/camera/depth_registered/image_float" rgb="/camera/rgb/image_rect_color" />-->
    <!--<node name="nodelet" pkg="nodelet" type="standalone" 
          depth_image_proc/convert_metric image_raw:=/camera/depth_registered/image_raw
          image:=/camera/depth_registered/image_float /> -->
  </group>

  <!-- Load controller and twix-mux -->
  <include file="$(find dude_control)/launch/control.launch" />
 
</launch>
